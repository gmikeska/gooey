<%="<% if(notice) %%>"%>
<%="<div class='alert alert-primary' role='alert' id='notice' style='margin-top:1%;'><%= notice %%></div>"%>
<%="<% end %%>"%>

<%="<h1>Gallery: <%= @gallery.name %%></h1>"%>

<%="<div class='container'>"%>
  <%="<table class='table'>"%>
    <%="<thead>"%>
      <%="<th>Image</th>"%>
      <%="<th>Name</th>"%>
      <%="<th>Created at:</th>"%>
      <%="<th>Size</th>"%>
      <%="<th colspan=2></th>"%>
    <%="</thead>"%>
    <%="<tbody>"%>
      <%="<% @gallery.files.each do |file| %%>"%>
      <%="<tr>"%>
        <%="<td><%= image_tag file.variant(resize_to_limit: [100, 100]) %%></td>"%>
        <%="<td><%= link_to file.filename, url_for(file) %%></td>"%>
        <%="<td><%= file.created_at %%></td>"%>
        <%="<td><%= file.byte_size/1000 %%> kB</td>"%>
        <%="<td><%= link_to 'Show', url_for(file), class: 'btn btn-sm btn-outline-info' %%></td>"%>
        <%="<td><%= link_to 'Delete', file, method: :delete, data: { confirm: 'Are you sure?' } %%></td>"%>
      <%="</tr>"%>
      <%="<% end %%>"%>
    <%="</tbody>"%>
  <%="</table>"%>

<%="</div>"%>

<%="<%= link_to 'Add File', edit_gallery_path(@gallery) | link_to 'Back', galleries_path %%>"%>
