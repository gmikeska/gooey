<%= "<p id='notice'><%= notice %%></p>" %>

<%=" <h1> #{plural_name.capitalize} </h1>" %>

<%= "<table class='table'>" %>
  <%= "<thead>" %>
    <%= "<tr>" %>
        <%= "<th>Name</th>" %>
        <%= "<th>count</th>" %>
        <%= "<th colspan=3></th>" %>
    <%= "</tr>" %>
  <%= "</thead>" %>

  <%= "<tbody>" %>
    <%= "<% @#{plural_name}.each do |#{singular_name}| %%>" %>
      <%= "<tr>" %>
          <%= "<td> <%= gallery.name %%> </td>" %>
          <%= "<td> <%= gallery.files.count %%> </td>" %>
          <%= "<td><%= link_to 'Show', gallery_path(gallery), class: 'btn btn-sm btn-outline-info' %%></td>" %>
        <%= "<td><%= link_to 'Edit', edit_gallery_path(gallery) %%></td>" %>
        <%= "<td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %%></td>" %>
      <%= "</tr>" %>
     <%= "<% end %%>" %>
  <%= "</tbody>" %>
<%= "</table>" %>
<%= "<br>" %>

<%= "<%= link_to 'New Gallery', new_gallery_path %%>" %>
