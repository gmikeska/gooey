<%= "<p id='notice'><%= notice %%></p>" %>

<%= "<h1>Pages</h1>" %>

<%= "<table>" %>
  <%= "<thead>" %>
    <%= "<tr>" %>
      <%= "<th>name</th>" %>
      <%= "<th colspan=3></th>" %>
    <%= "</tr>" %>
  <%= "</thead>" %>

  <%= "<tbody>" %>
    <%= "<% @#{plural_name}.each do |#{singular_name}| %%>" %>
      <%= "<tr>" %>
        <%= "<td> <%= #{singular_name}.name %%> </td>" %>
        <%= "<td><%= link_to 'Show', #{singular_name}_path(page), class: 'btn btn-sm btn-outline-info' %%></td>" %>
        <%= "<td><%= link_to 'Edit', edit_#{singular_name}_path(page) %%></td>" %>
        <%= "<td><%= link_to 'Destroy', #{singular_name}, method: :delete, data: { confirm: 'Are you sure?' } %%></td>" %>
      <%= "</tr>" %>
     <%= "<% end %%>" %>
  <%= "</tbody>" %>
<%= "</table>" %>

<%= "<br>" %>

<%= "<%= link_to 'New #{singular_name.capitalize}', new_#{singular_name}_path %%>" %>
