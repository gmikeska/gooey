<p id="notice"><%= notice %></p>

<%= @component.design_name %> from <%= @component.group.name.capitalize %> <%= link_to 'Edit', edit_group_component_path(@component.group,@component) %> |
<%= link_to 'Back', url_for(:back) %>
<% @component.field_names.each do |field| %>
  <div class="label" style="background:transparent; border:none;"><%= field %>:</div>
  <div class=""><pre><code><%= @component.get_field(field) %></code></pre></div><div class="w-100"></div>
  <% end %>
  <div>
    <% if(component.design_type.nil?) %>
      <%= component.body.html_safe %>
    <% else %>
      <%= render partial:component.design_type.pluralize+'/'+component.design_name, locals:component.field_values %>
    <% end %>
  </div>
